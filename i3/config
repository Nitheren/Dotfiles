#Config
#
#

#Needed for i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 0 
gaps inner 8 
gaps outer 10

#Basic settings
set $mod Mod4
floating_modifier $mod
set $term urxvt

#Compasition 
exec --no-startup-id compton

#Default browser
set $browser palemoon
 
#Audio
set $audio ffmpeg -f alsa -i default -c:a flac -y output.flac

#Mail Client
set $mail mutt

#Music Cilent
set $music urxvt -e cmus

#Music Deamon
exec --no-startup-id mpd

#Font
font pango: fixed 9

#Applet?
exec --no-startup-id nm-applet

#Bar
bar {
	mode		hide
	position	top
	status_command 	i3status
	font pango: 	fixed 9

	colors {
	background		#161619
	statusline		#E5E5E5
	separator		#E5E5E5 
	focused_background	#161619
	

	}
}
#Wallpaper
exec_always --no-startup-id wal -R
#exec_always feh --bg-scale ~/Pictures/cyberpunk.png

#Key bindes 
bindsym $mod+Return 		exec $term

bindsym $mod+Shift+space 	floating toggle
bindsym $mod+space		focus mode_toggle

bindsym $mod+Escape		exec --no-startup-id xset -display :0.0 dpms force off
bindsym $mod+Shift+Escape 	exec i3-msg exit

bindsym $mod+Shift+BackSpace	exec reboot

bindsym $mod+Tab		workspace back_and_forth

#END

#Letter Keys
bindsym $mod+Shift+q	kill

bindsym $mod+w		exec palemoon
bindsym $mod+Shift+w	exec $term -e weechat

bindsym $mod+r 		exec $term -e ranger
bindsym $mod+Shift+r	restart

bindsym $mod+t		split toggle
bindsym $mod+Shift+t	gaps inner all set 15; gaps outer all set 15

#bindsym $mod+y		exec 
bindsym $mod+Shift+y	resize shrink width 10 px or 10ppt

#bindsym $mod+u
bindsym $mod+Shift+u	resize shrink height 10 px or 10 ppt

bindsym $mod+i 		exec $term -e gtop
bindsym $mod+Shift+i	resize grow height 10 px or 10 ppt

bindsym $mod+o		exec --no-startup-id mocp -j 0%
bindsym $mod+Shift+o	resize grow width 10 px or 10 ppt

bindsym $mod+p		exec $term -e htop

bindsym $mod+s		gaps inner current plus 5
bindsym $mod+Shift+s	gaps inner current minus 5

bindsym $mod+d		exec rofi -show run
bindsym $mod+Shift+d	gaps inner all set 0; gaps outer all set 0

bindsym $mod+f		gaps inner all set 015; gaps outer all set 15

#Thunar
bindsym $mod+Shift+f	exec thunar
for_window [window_role="Thunar"] floating enable

#Gimp
bindsym $mod+G 		exec gimp

#lxapperence
for_window [window_role="lxappearance"] floating enable; resize shrink width 50px

bindsym $mod+h		focus left
bindsym $mod+Shift+h	move left 30

bindsym $mod+j		focus down
bindsym $mod+Shift+j	move down 30

bindsym $mod+k		focus up
bindsym $mod+Shift+k	move up 30

bindsym $mod+l		focus right
bindsym $mod+Shift+l	move right 30

bindsym $mod+z		gaps outer current plus 5
bindsym $mod+Shift+z	gaps outer current minus 5

bindsym $mod+c		split toggle

bindsym $mod+m 		exec $music
#END

#Function Buttons
#bindsym F1		exec --no-startup-id echo "help" > /dev/null
